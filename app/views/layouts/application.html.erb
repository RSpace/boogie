<!DOCTYPE html>
<html>
<head>
  <title>Boogie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body role="document">

  <!-- Fixed navbar -->
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
          <span class="sr-only">Fold navigation ind/ud</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">SKRum</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="<%= 'active' if current_page?(new_booking_path) %>"><%= link_to 'Ny booking', new_booking_path %> </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
            <%= link_to('Log ud', destroy_user_session_path, :method => :delete) %>
            </li>
          <% else %>
            <li class="<%= 'active' if current_page?(new_user_session_path) %>">
            <%= link_to('Log ind', new_user_session_path)  %>
            </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <!-- Main container -->
  <div class="container" role="main">
    <%= yield %>
  </div>

</body>
</html>
