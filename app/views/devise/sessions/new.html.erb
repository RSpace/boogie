<h2>Log ind</h2>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' } ) do |f| %>
  <div class="form-group">
    <%= f.label :username, 'Brugernavn', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :username, all_user_names_for_select, {autofocus: true}, class: 'form-control input-lg' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Kodeord', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> Husk mig
          <% end %>
        </div>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log ind", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
