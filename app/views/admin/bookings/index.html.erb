<div class="page-header">
  <h1>Alle bookinger i <%= @current_year %></h1>
</div>

<p><%= link_to 'Opret gratis booking', new_admin_booking_path, class: 'btn btn-default' %></p>

<% if @bookings.empty? %>
  <p>Ingen bookinger endnu</p>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>Dato</th>
      <th>Bruger</th>
      <th>Betaling</th>
      <th>Handlinger</th>
    </tr>
    <% for booking in @bookings %>
      <tr>
        <td><%= l(booking.booking_date, format: BOOGIE_SETTINGS[:date_format]) %></td>
        <td><%= booking.user.username %></td>
        <td><%= booking.stripe_charge_id %></td><%# # TODO: Link to Stripe %>
        <td>
          <%= link_to 'Rediger', edit_admin_booking_path(booking) %> |
          <%# TODO: Get confirmation link working %>
          <%= link_to 'Slet', admin_booking_path(booking), method: :delete, confirm: "Er du sikker pÃ¥ du vil slette #{booking.user.username}'s booking #{l(booking.booking_date, format: BOOGIE_SETTINGS[:date_format])}?" %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<ul class="pagination">
  <% for year in 2015..Time.now.next_year.year %>
    <li class="<%= year == @current_year ? 'active' : '' %>">
      <%= link_to year, admin_bookings_path(year: year) %>
    </li>
  <% end %>
</ul>

